{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es2017", "dom"],
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "removeComments": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "allowUnreachableCode": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "plugins": [{
            "name": "tslint-language-service"
        }],
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ]
}
